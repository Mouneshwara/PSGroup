<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp">
                <ImageView
                    android:id="@+id/ic_project"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/apartment"
                    android:scaleType="centerCrop"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:padding="15dp"
                    android:background="@drawable/cardgradient">
                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">
                <TextView
                    android:id="@+id/tv_projectName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Arham"
                    android:fontFamily="@font/playfairdisplay_regular"
                    android:textColor="@color/imageCount"
                    android:textSize="22sp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 BHK, 4 BHK, 5 BHK "
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/text"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tv_projectLandmark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:layout_alignParentRight="true"
                            android:drawableLeft="@drawable/ic_location_on_orange"
                            android:text="Topsia, Kolkata"
                            android:textColor="@color/text"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppins_regular"/>

                </RelativeLayout>
            </LinearLayout>

            <!--<LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Minimum points to be earned: "
                android:paddingLeft="15dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/specText"/>

            <TextView
                android:id="@+id/tv_toBeEarned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="80,000"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/specText"/>

            </LinearLayout>-->
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="110dp"
        android:layout_marginRight="7dp"
        android:layout_alignParentRight="true"
        android:background="@color/button">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rupee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/poppins_semibold"
                android:text="2.5 Cr"
                android:gravity="center"
                android:layout_marginBottom="-10dp"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppins_regular"
                android:text="onwards"
                android:textColor="@color/white" />


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>