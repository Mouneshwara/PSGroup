<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="218dp" android:height="75dp">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="#ffff9801" />
            <item android:name="android:shadowColor">#26000000</item>
            <!-- TextView shadow offsets do not respect scale. -->
            <item android:name="android:shadowDx">0</item>
            <item android:name="android:shadowDy">5</item>
        </shape>
    </item>
</selector>