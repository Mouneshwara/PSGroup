        <layer-list >
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#a6a6a6"/>
                </shape>
            </item>
            <item android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#00000000"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list >
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#b71b2d33"/>
                </shape>
            </item>
            <item android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#FDFCFC"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>