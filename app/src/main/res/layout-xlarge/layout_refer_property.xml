                        android:id="@+id/tv_propertyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Arham"
                        android:fontFamily="@font/playfairdisplay_regular"
                        android:textColor="@color/imageCount"
                        android:textSize="28sp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 BHK, 4 BHK, 5 BHK "
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/text"
                            android:textSize="22sp"/>

                        <TextView
                            android:id="@+id/tv_landmark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:layout_alignParentRight="true"
                            android:drawableLeft="@drawable/ic_location_on_orange_large"
                            android:text="Topsia, Kolkata"
                            android:textColor="@color/text"
                            android:textSize="22sp"
                            android:fontFamily="@font/poppins_regular"/>

                    </RelativeLayout>
                </LinearLayout>

