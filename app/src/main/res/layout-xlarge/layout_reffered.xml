<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="550dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dimen_20dp"
    android:layout_gravity="center"
    app:cardCornerRadius="@dimen/dimen_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:paddingBottom="@dimen/dimen_20dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_success"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/signup_success"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Referred!"
            android:fontFamily="@font/montserrat_regular"
            android:padding="20dp"
            android:textSize="28sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_success_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/refered_text"
            android:fontFamily="@font/montserrat_regular"
            android:padding="10dp"
            android:textSize="24sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_done"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="done"
            android:padding="@dimen/dimen_15dp"
            android:layout_marginTop="@dimen/textSize_30sp"
            android:layout_gravity="center"
            android:paddingRight="@dimen/dimen_10dp"
            android:paddingLeft="@dimen/dimen_10dp"
            android:textSize="28sp"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen_5dp"
            android:textColor="@color/white"
            android:background="@drawable/signupbutton"/>

    </LinearLayout>

</android.support.v7.widget.CardView>