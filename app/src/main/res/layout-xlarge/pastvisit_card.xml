<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_margin="15dp"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="350dp">
                <ImageView
                    android:id="@+id/ic_property"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/apartment"
                    android:scaleType="centerCrop"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:padding="15dp"
                    android:background="@drawable/cardgradient">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentBottom="true">
                        <TextView
                            android:id="@+id/tv_apartmentName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Equinox"
                            android:fontFamily="@font/playfairdisplay_regular"
                            android:textSize="30sp"
                            android:textColor="@color/white"/>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_landMark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="A-501,3BHK"
                                android:textSize="24sp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/white"/>

                            <RelativeLayout
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/ic_location_image"
                                    android:layout_width="35dp"
                                    android:layout_centerVertical="true"
                                    android:layout_height="35dp"
                                    android:src="@drawable/ic_locationcard" />
                                <TextView
                                    android:id="@+id/visit_Loc"
                                    android:layout_toRightOf="@id/ic_location_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Topsia,Kolkata "
                                    android:textSize="24sp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textColor="@color/white"/>
                            </RelativeLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/cale" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:textSize="28sp"
                            android:textColor="@color/default_time_btn"
                            android:fontFamily="@font/poppins_medium"

                            />
                        <TextView
                            android:id="@+id/visit_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nov 25,2017"
                            android:textSize="28sp"
                            android:textColor="@color/grey_text"
                            />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">


                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/stopwatch"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textSize="28sp"
                            android:textColor="@color/default_time_btn"
                            android:fontFamily="@font/poppins_medium"
                            />
                        <TextView
                            android:id="@+id/visit_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pending for approval"
                            android:textSize="28sp"
                            android:textColor="@color/grey_text"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View all 3 Comments"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/grey_text"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="28sp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/letter"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/ic_visit_dot"
                    android:text="R"
                    android:textSize="32sp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/white"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="28sp"
                        android:textColor="@color/default_time_btn"
                        android:singleLine="true"
                        android:text="Apartment main door still needs to be fixed"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/text"
                        android:layout_marginRight="@dimen/dimen_10dp"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>