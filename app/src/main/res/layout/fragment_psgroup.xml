<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        android:layout_margin="15dp"
        app:cardCornerRadius="6dp">
        <RelativeLayout
            android:id="@+id/program_card"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/ic_fApplication"
                android:layout_width="wrap_content"
                android:scaleType="centerInside"
                android:padding="@dimen/dimen_10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_loyalthy_program"/>

            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ic_fApplication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/ps_program"
                android:padding="@dimen/dimen_10dp"
                android:textColor="@color/cardText"
                android:fontFamily="@font/poppins_medium"
                android:textSize="18sp" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="15dp"
                android:src="@drawable/financenext"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        android:layout_margin="15dp"
        app:cardCornerRadius="6dp">
        <RelativeLayout
            android:id="@+id/offers_card"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/ic_offers"
                android:scaleType="centerInside"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_10dp"
                android:src="@drawable/ic_offers"/>

            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ic_offers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dimen_10dp"
                android:text="@string/ps_offers"
                android:textColor="@color/cardText"
                android:fontFamily="@font/poppins_medium"
                android:textSize="18sp" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="15dp"
                android:src="@drawable/financenext"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        android:layout_margin="15dp"
        app:cardCornerRadius="6dp">
        <RelativeLayout
            android:id="@+id/projects_card"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/project_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:padding="@dimen/dimen_10dp"
                android:src="@drawable/ic_projects" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/project_image"
                android:layout_width="wrap_content"
                android:padding="@dimen/dimen_10dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/ps_projects"
                android:textColor="@color/cardText"
                android:fontFamily="@font/poppins_medium"
                android:textSize="18sp" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="15dp"
                android:src="@drawable/financenext"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>