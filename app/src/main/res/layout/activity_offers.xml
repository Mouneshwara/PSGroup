<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    tools:context=".OffersActivity">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/toolbar">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/ic_backClick"
                        android:paddingRight="@dimen/dimen_10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_backspace"/>
                    <TextView
                        android:layout_toRightOf="@id/ic_backClick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Offers"
                        android:textSize="@dimen/textSize_20sp"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/playfairdisplay_regular"
                        android:id="@+id/text"
                        android:textColor="@color/imageCount" />
                </RelativeLayout>


        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/offers_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>

    </LinearLayout>
