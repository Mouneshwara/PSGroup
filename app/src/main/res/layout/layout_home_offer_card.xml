<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_offer"
    app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <!--<TextView
                android:id="@+id/view_all_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/poppins_medium"
                android:text="View All Offers"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />-->

            <TextView
                android:id="@+id/offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Get 5% off on bookings before 15th March, 2017"
                android:textColor="@color/imageCount"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_offers_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:paddingTop="5dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:paddingBottom="5dp"
                android:text="PS Group’s upcoming project ‘Zen’ is offering an exciting offer. You can get 5% off on bookings..."
                android:textColor="@color/specText"
                app:fontFamily="@font/poppins_regular" />
            <TextView
                android:id="@+id/offer_read_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="READ MORE"
                android:fontFamily="@font/poppins_semibold"
                android:paddingRight="10dp"
                android:textColor="@color/colorPrimary"/>
            <ImageView
                android:id="@+id/offer_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/blog_card_image"
                android:scaleType="centerCrop"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>