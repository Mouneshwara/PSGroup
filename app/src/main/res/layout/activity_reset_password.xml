<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginscreen"
    tools:context=".ResetPasswordActivity">


        <ScrollView
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_margin="30dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/loginps" />
                    <RelativeLayout
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="25dp">
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingBottom="50dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Reset Password"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="25sp"
                                    android:padding="15dp"
                                    app:fontFamily="@font/playfairdisplay_regular" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dimen_10dp">
                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_regular"
                                        android:inputType="textPassword"
                                        android:layout_marginLeft="25dp"
                                        android:layout_marginRight="25dp"
                                        android:layout_marginEnd="25dp"
                                        android:layout_marginStart="25dp"
                                        android:padding="10dp"
                                        android:textColor="#a6a6a6"
                                        android:textSize="14sp"
                                        android:background="@drawable/edittextbackground"
                                        android:id="@+id/new_pass"
                                        android:hint="NEW PASSWORD"/>
                                    <View
                                        android:layout_width="25dp"
                                        android:layout_height="1dp"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="10dp"
                                        android:layout_alignParentRight="true"
                                        android:background="@color/colorPrimaryDark"/>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimen_10dp"
                                    android:padding="@dimen/dimen_10dp">
                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_regular"
                                        android:layout_marginLeft="25dp"
                                        android:layout_marginRight="25dp"
                                        android:layout_marginEnd="25dp"
                                        android:layout_marginStart="25dp"
                                        android:padding="10dp"
                                        android:inputType="textPassword"
                                        android:textColor="#a6a6a6"
                                        android:textSize="14sp"
                                        android:background="@drawable/edittextbackground"
                                        android:id="@+id/conf_pass"
                                        android:hint="CONFIRM PASSWORD"/>
                                    <View
                                        android:layout_width="25dp"
                                        android:layout_height="1dp"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="10dp"
                                        android:layout_alignParentRight="true"
                                        android:background="@color/colorPrimaryDark"/>
                                    <TextView
                                        android:fontFamily="@font/poppins_medium"
                                        android:id="@+id/pass_error"
                                        android:layout_below="@+id/conf_pass"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/redtext"
                                        android:visibility="gone"
                                        android:textSize="12sp"
                                        android:layout_marginLeft="25dp"
                                        android:layout_marginRight="25dp"
                                        android:layout_marginEnd="25dp"
                                        android:layout_marginStart="25dp"
                                        android:text="Password Don't Match" />
                                </RelativeLayout>


                                <TextView
                                    android:fontFamily="@font/poppins_medium"
                                    android:id="@+id/goback"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/search"
                                    android:textSize="12sp"
                                    android:layout_marginRight="20dp"
                                    android:layout_gravity="right"
                                    android:text="Go Back" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </RelativeLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/reset"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:background="@drawable/shadowbutton"
                    android:text="reset"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
            </LinearLayout>
        </ScrollView>


</RelativeLayout>