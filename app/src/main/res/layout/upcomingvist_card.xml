<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_margin="15dp"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <ImageView
                    android:id="@+id/ic_property"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/apartment"
                    android:scaleType="centerCrop"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:padding="15dp"
                    android:background="@drawable/cardgradient">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentBottom="true">
                        <TextView
                            android:id="@+id/upComingName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Equinox"
                            android:fontFamily="@font/playfairdisplay_regular"
                            android:textSize="20sp"
                            android:textColor="@color/white"/>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_plotNo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="A-501,"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/white"/>
                            <TextView
                                android:id="@+id/tv_bhk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 3BHK"
                                android:layout_toRightOf="@id/tv_plotNo"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/white"/>

                            <RelativeLayout
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/ic_location_image"
                                    android:layout_width="15dp"
                                    android:layout_centerVertical="true"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_locationcard" />
                                <TextView
                                    android:id="@+id/tv_landMark"
                                    android:layout_toRightOf="@id/ic_location_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Topsia,Kolkata "
                                    android:fontFamily="@font/poppins_regular"
                                    android:textColor="@color/white"/>
                            </RelativeLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:layout_marginLeft="5dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/icon_date"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/cale"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon_date"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/imageCount"
           />
        <TextView
            android:id="@+id/visit_date"
            android:layout_width="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:layout_height="wrap_content"
            android:text="Nov 25,2017"
            android:textSize="16sp"
            android:textColor="@color/grey_text"
            />
    </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">


    <ImageView
        android:id="@+id/icon_status"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/stopwatch"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/icon_status">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/imageCount" />
        <TextView
            android:id="@+id/visit_status"
            android:layout_width="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:layout_height="wrap_content"
            android:text="Pending for approval"
            android:textSize="16sp"
            android:textColor="@color/grey_text"
           />
    </LinearLayout>
    </RelativeLayout>
</LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:stateListAnimator="@null"
                        android:id="@+id/btn_cancel"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="#a6a6a6"
                        android:layout_margin="5dp"
                        android:text="CANCEL"
                        android:background="@drawable/button_gradiant"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/btn_reSchedule"
                        android:stateListAnimator="@null"
                        android:layout_margin="5dp"
                        android:text="RESCHEDULE"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_semibold"
                        android:background="@drawable/button_gradiant2"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>