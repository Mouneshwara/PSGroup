<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.psgroup.psgroup.ScheduleNextActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@drawable/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/ic_back"
                android:paddingRight="@dimen/dimen_10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_backspace"/>
            <TextView
                android:layout_toRightOf="@id/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule Visit"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/textSize_20sp"
                android:fontFamily="@font/playfairdisplay_regular"
                android:textColor="@color/imageCount" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/cb_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Site"
            android:layout_marginBottom="20dp"
            android:textColor="@color/signup"
            android:button="@drawable/radio_selector"
            android:fontFamily="@font/poppins_regular"/>

        <CheckBox
            android:id="@+id/cb_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Office"
            android:layout_marginBottom="20dp"
            android:textColor="@color/signup"
            android:button="@drawable/radio_selector"
            android:fontFamily="@font/poppins_regular"/>



