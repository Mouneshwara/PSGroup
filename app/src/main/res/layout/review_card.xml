<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="15dp"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@drawable/ic_card_background">

            <ImageView
                android:id="@+id/headder"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/format_quote_open"/>


            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:textColor="@color/colorPrimaryDark"
                android:padding="@dimen/dimen_10dp"
                android:lineSpacingExtra="@dimen/dimen_5dp"
                android:textAlignment="center"
                android:text="Investing is a PS Group property was the best decision of our lives"
                android:fontFamily="@font/playfairdisplay_regular" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="Mr. Satyavansh Ray"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/tv_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"
                android:text="Investor, Kolkata"
                android:layout_marginBottom="@dimen/dimen_20dp"
                android:fontFamily="@font/playfairdisplay_regular" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
