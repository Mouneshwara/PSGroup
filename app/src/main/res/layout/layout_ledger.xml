<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_15dp"
    android:layout_marginRight="@dimen/dimen_15dp"
    android:padding="@dimen/dimen_5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lLayout"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6th October 2016"
            android:textSize="12sp"
            android:textColor="@color/imageCount"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Demand : "
        android:textSize="10sp"
        android:textColor="@color/text"
        android:fontFamily="@font/poppins_regular"/>

    <TextView
        android:id="@+id/tv_demand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On Booking"
        android:textSize="10sp"
        android:textColor="@color/text"
        android:fontFamily="@font/poppins_regular"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receipt : "
            android:textSize="10sp"
            android:textColor="@color/text"
            android:fontFamily="@font/poppins_regular"/>

        <TextView
            android:id="@+id/tv_receipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REC0129/05783/16-17"
            android:textSize="10sp"
            android:textColor="@color/text"
            android:fontFamily="@font/poppins_regular"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vide Chq No: "
            android:textSize="10sp"
            android:textColor="@color/text"
            android:fontFamily="@font/poppins_regular"/>

        <TextView
            android:id="@+id/tv_chkNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="066127"
            android:textSize="10sp"
            android:textColor="@color/text"
            android:fontFamily="@font/poppins_regular"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drawn on: "
            android:textSize="10sp"
            android:textColor="@color/text"
            android:fontFamily="@font/poppins_regular"/>

        <TextView
            android:id="@+id/tv_drawnOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" AXIS BANK"
            android:textSize="10sp"
            android:textColor="@color/text"
            android:fontFamily="@font/poppins_regular"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/amountTax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="( 896070.00 + Tax : "
            android:textSize="10sp"
            android:textColor="@color/text"
            android:fontFamily="@font/poppins_regular"/>

        <TextView
            android:id="@+id/tv_tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 40323.00"
            android:textSize="10sp"
            android:textColor="@color/text"
            android:fontFamily="@font/poppins_regular"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vide EFT No: "
            android:textSize="10sp"
            android:textColor="@color/text"
            android:fontFamily="@font/poppins_regular"/>

        <TextView
            android:id="@+id/tv_EFTno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AXIMB181595431244"
            android:textSize="10sp"
            android:textColor="@color/text"
            android:fontFamily="@font/poppins_regular"/>

    </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_balance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:textSize="12sp"
        android:text="945441.00 Dr."
        android:textColor="@color/redcolor"/>

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:textSize="12sp"
        android:text="945441.00 Dr."
        android:textColor="@color/redcolor"/>


    </LinearLayout>

</LinearLayout>